@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page bg-light">
    @await Component.InvokeAsync("_UILayoutNavBarComponentPartial")
    </div>
    <section class="food_section layout_padding">
        <div class="container">
            <h1 class="text-center mb-4">Mesaj Sayfası</h1>

            <div class="card shadow p-4">
                <h3 class="text-center mb-4">SignalR Restoran Anlık Mesajlaşma</h3>

                <div class="row mb-3">
                    <div class="col-md-3 text-end fw-bold">Kullanıcı Adınız:</div>
                    <div class="col-md-6">
                        <input type="text" id="userinput" class="form-control" placeholder="Adınızı girin" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3 text-end fw-bold">Mesajınız:</div>
                    <div class="col-md-6">
                        <input type="text" id="messageinput" class="form-control" placeholder="Mesajınızı yazın" />
                    </div>
                </div>

                <div class="text-center">
                    <button id="sendbutton" class="btn btn-success px-4">Mesaj Gönder</button>
                </div>
            </div>

            <div class="card shadow mt-4 p-4">
                <h5 class="text-center">Mesajlar</h5>
                <hr />
                <div class="message-box p-3 bg-white border rounded" style="height: 300px; overflow-y: auto;">
                    <ul id="messagelist" class="list-unstyled"></ul>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
</body>
</html>