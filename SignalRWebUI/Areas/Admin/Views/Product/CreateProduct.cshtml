@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ProductName">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" id="ProductName" asp-for="ProductName">
							</div>
							<div class="form-group">
								<label for="Description">Ürün Açıklamasını Giriniz</label>
								<input type="text" class="form-control" id="Description" asp-for="Description">
							</div>
							<div class="form-group">
								<label for="Price">Ürün Fiyatını Giriniz</label>
								<input type="text" class="form-control" id="Price" asp-for="Price">
							</div>
							<div class="form-group">
								<label for="ImageUrl">Ürün Fotoğrafını Giriniz</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="categoryname">Ürün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.x,new {@class="form-control"})
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürün Ekle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>
