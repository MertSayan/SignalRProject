@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Günün İndirimleri Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün İndirimli ürünleri aşağıda yer almaktadır. Tema Bütünlüğü için 2 adet indirimli ürünü açık bırakın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Gizle</th>
									<th scope="col">Aç</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td>@item.Status</td>
										<td><a href="/Admin/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Admin/Discount/ChangeDiscountStatusToFalse/@item.DiscountId" class="btn btn-outline-primary">Gizle</a></td>
										<td><a href="/Admin/Discount/ChangeDiscountStatusToTrue/@item.DiscountId" class="btn btn-outline-dark">Aç</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Admin/Discount/CreateDiscount" class="btn btn-outline-primary"> Yeni İndirim Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

