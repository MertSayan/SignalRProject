@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title"> Günün İndirimi Güncelleme</div>
						</div>
						<input type="hidden" asp-for="DiscountId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">İndirim Başlığı</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Amount">İndirim Miktarı</label>
								<input type="text" class="form-control" id="Amount" asp-for="Amount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Açıklaması</label>
								<input type="text" class="form-control" id="Description" asp-for="Description">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Resim</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Günün İndirimi Ekle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>
