@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Sosyal Medya Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Sosyal Medya Adı</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Url">URL</label>
								<input type="text" class="form-control" id="Url" asp-for="Url">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Icon">Icon</label>
								<input type="text" class="form-control" id="Icon" asp-for="Icon">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Ekle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>
