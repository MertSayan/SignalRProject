@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Rezervasyon Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="BookingId"/>
							<div class="form-group">
								<label for="Name">Adı</label>
								<input type="text" class="form-control" id="Name" asp-for="Name">
							</div>
							<div class="form-group">
								<label for="Phone">Telefon No</label>
								<input type="text" class="form-control" id="Phone" asp-for="Phone">
							</div>
							<div class="form-group">
								<label for="Mail">Email</label>
								<input type="text" class="form-control" id="Mail" asp-for="Mail">
							</div>
							<div class="form-group">
								<label for="PersonCount">Kaç Kişilik</label>
								<input type="text" class="form-control" id="PersonCount" asp-for="PersonCount">
							</div>
							<div class="form-group">
								<label for="Date">Tarih</label>
								<input type="datetime" class="form-control" id="Date" asp-for="Date">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Rezervasyon Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
