@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemi</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda İle İlgili işlemleri aşağıdan yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>

									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

