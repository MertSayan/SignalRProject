@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategori Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" asp-for="CategoryId" />
								<label for="categoryname">Kategori Adını </label>
								<input type="text" class="form-control" id="categoryname" asp-for="CategoryName">
							</div>
							<div class="form-group">
								<label for="categoryStatus">Durum </label>
								<input type="text" class="form-control" id="categoryStatus" asp-for="CategoryStatus">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Kategori Güncelle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>
