@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Bildirim Girişi</div>
						</div>
						<input type="hidden" asp-for="NotificationId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Type</label>
								<input type="text" class="form-control" id="categoryname" asp-for="Type">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">İcon</label>
								<input type="text" class="form-control" id="categoryname" asp-for="Icon">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Description</label>
								<input type="text" class="form-control" id="categoryname" asp-for="Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Bildirim Ekle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>

