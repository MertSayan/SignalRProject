@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Referans Girişi</div>
						</div>
						<input type="hidden" asp-for="TestimonialId" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name">İsim</label>
								<input type="text" class="form-control" id="Name" asp-for="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlık</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Comment">Yorum</label>
								<input type="text" class="form-control" id="Comment" asp-for="Comment">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Fotoğraf </label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Status">Durum </label>
								<input type="text" class="form-control" id="Status" asp-for="Status">
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-primary">Referans Güncelle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>
