@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" id="Location" asp-for="Location">
							</div>
							<div class="form-group">
								<label for="Phone">Telefon Numarası</label>
								<input type="text" class="form-control" id="Phone" asp-for="Phone">
							</div>
							<div class="form-group">
								<label for="Mail">Mail Adresi Giriniz</label>
								<input type="text" class="form-control" id="Mail" asp-for="Mail">
							</div>
							<div class="form-group">
								<label for="FooterDescription">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" id="FooterDescription" asp-for="FooterDescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisi Ekle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>
