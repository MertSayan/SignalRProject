@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgisi</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title"> İletişim Bilgisi Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="ContactId"/>
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" id="Location" asp-for="Location">
							</div>
							<div class="form-group">
								<label for="Phone">Telefon Numarası</label>
								<input type="text" class="form-control" id="Phone" asp-for="Phone">
							</div>
							<div class="form-group">
								<label for="Mail">Mail Adresi Giriniz</label>
								<input type="text" class="form-control" id="Mail" asp-for="Mail">
							</div>
							<div class="form-group">
								<label for="FooterDescription">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" id="FooterDescription" asp-for="FooterDescription"></textarea>
							</div>
							<div class="form-group">
								<label for="FooterTitle">Footer Başlığı Giriniz</label>
								<input type="text" class="form-control" id="FooterTitle" asp-for="FooterTitle">
							</div>
							<div class="form-group">
								<label for="OpenDays">Açık olan günleri girin</label>
								<input type="text" class="form-control" id="OpenDays" asp-for="OpenDays">
							</div>
							<div class="form-group">
								<label for="FooterDescription">Açık Günlerin Açıklaması</label>
								<input type="text" class="form-control" id="FooterDescription" asp-for="FooterDescription">
							</div>
							<div class="form-group">
								<label for="OpenHours">Açık Saatleri Girin</label>
								<input type="text" class="form-control" id="OpenHours" asp-for="OpenHours">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisi Güncelle</button>
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>

